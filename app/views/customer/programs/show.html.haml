- @title = "プログラム詳細情報"
%h1= @title
.table-wrapper
  %table.attributes
    - p = ProgramPresenter.new(@program, self)
    %tr
      %th タイトル
      %td= p.title
    %tr
      %th 申し込み開始⽇時
      %td.date= p.application_start_time
    %tr
      %th 申し込み終了⽇時
      %td.date= p.application_end_time
    %tr
      %th 最⼩参加者数
      %td.numeric= p.min_number_of_participants
    %tr
      %th 最⼤参加者数
      %td.numeric= p.max_number_of_participants
  .description= p.description

  %div
    = p.apply_or_cancel_button
